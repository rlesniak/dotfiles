    "jira_transitionJiraIssue": "ask",
    "jira_addWorklogToJiraIssue": "ask",
    "jira_createConfluencePage": "ask",
    "jira_updateConfluencePage": "ask",
    "jira_createConfluenceFooterComment": "ask",
    "jira_createConfluenceInlineComment": "ask"
  }
