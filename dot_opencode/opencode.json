{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-handoff"
  ],
  "theme": "catpuccin-frappe",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp"
    }
  },
  "permission": {
