{
  "edit_predictions": {
    "provider": "zed"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "minimap": { "show": "always" },
  "tab_bar": { "show_nav_history_buttons": false },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "icon_theme": "Catppuccin Mocha",
  "inlay_hints": {
    "enabled": true,
    "show_background": true,
    "show_type_hints": false
  },
  "agent": {
    "tool_permissions": {
      "default": "allow"
    },
    "default_profile": "write",
    "favorite_models": [
      {
        "provider": "copilot_chat",
        "model": "claude-opus-4.5"
      }
    ],
    "play_sound_when_agent_done": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.6"
    }
  },
  "theme": "Catppuccin Mocha",
  "buffer_font_size": 18,
  "ui_font_family": "Geist Mono",
  "agent_ui_font_size": 16,
  "buffer_font_family": "JetBrains Mono",
  "terminal": {
    "font_family": "JetBrainsMonoNL Nerd Font Propo",
    "font_size": 14,
    "shell": "system"
  },
  "ui_font_size": 18,
  "format_on_save": "off",
  "project_panel": {
    "auto_fold_dirs": false,
    "indent_size": 16
  },
  "preferred_line_length": 90,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",

    "**/out",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "outline_panel": {
    "dock": "right"
  },
  "notification_panel": {
    "dock": "right"
  }
}
